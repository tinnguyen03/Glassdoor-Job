{
  "manifest_version": 3,
  "name": "Glassdoor Job Crawler",
  "version": "1.0",
  "description": "Crawl job listings from Glassdoor with configurable page loads displayed next to button, save to CSV",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.glassdoor.com/Job/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}